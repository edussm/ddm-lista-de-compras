        <activity
            android:name=".ListaActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CadastroActivity"
            android:label="Cadastro de Itens"/>
        <activity android:name=".BuscaProdutoRestActivity"
            android:label="Busca usando REST"/>
        <activity android:name=".BuscaListaDeProdutosRestActivity"
